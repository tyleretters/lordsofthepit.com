---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title }}</title>
  <subtitle>{{ site.description }}</subtitle>
  <link href="{{ site.url }}/feed.xml" rel="self"/>
  <link href="{{ site.url }}/"/>
  <updated>{{ collections.posts[0].date | date_to_xmlschema }}</updated>
  <id>{{ site.url }}/</id>
  <author>
    <name>Lords of the Pit</name>
  </author>
  {% for post in collections.posts | limit: 20 %}
  <entry>
    <title>{{ post.data.title | escape }}</title>
    <link href="{{ site.url }}{{ post.url }}"/>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <id>{{ site.url }}{{ post.url }}</id>
    <content type="html">{{ post.templateContent | escape }}</content>
    <author>
      <name>{{ post.data.author }}</name>
    </author>
  </entry>
  {% endfor %}
</feed>
